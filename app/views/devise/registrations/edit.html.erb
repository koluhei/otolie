<%= render partial: "shared/header" %>
<div class="new-body">
  <% if request.fullpath.include?("users") %>
    <h2 class="signup-title">User Edit</h2>
  <% else %>
    <h2 class="signup-title">Creater Edit</h2>
  <% end %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form">
      <div class="field">
        <%= f.label :name, "ユーザー名" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      
      <div class="field profile">
        <%= f.label :profile, "プロフィール" %><br />
        <%= f.text_area :profile, autocomplete: "profile", rows: 5 %>
      </div>

      <div class="field">
        <%= f.label :image, "プロフィール画像" %><br />
        <%= f.file_field :image, autocomplete: "profile_image"%>
      </div>
       
       <div class="field">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "編集", class: "submit-btn"%>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<%= render partial: 'shared/footer'%>